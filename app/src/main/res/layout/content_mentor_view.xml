<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MentorViewActivity"
    tools:showIn="@layout/activity_mentor_view">

    <TextView
        android:id="@+id/textViewMentors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap each mentor to view or edit details. Click the plus sign to add a new mentor."
        android:textSize="18sp"
        android:layout_marginTop="5dp"/>

    <ListView
        android:id="@+id/listMentors"
        android:layout_width="368dp"
        android:layout_height="466dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"/>

</LinearLayout>